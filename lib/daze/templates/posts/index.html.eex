<!DOCTYPE html>
<html>
  <head>
  </head>
  <body>
    <h1>Posts</h1>

    <div>
      <%= if @current_user_email do %>
        Welcome <%= @current_user_email %>
      <% else %>
        <a href="/sign_in">Sign In</a>
      <% end %>
    </div>

    <div>
      <form action="/posts" method="post">
        <label>Post:</label>
        <textarea name="post"></textarea>

        <label>Author</label>
        <input type="text" name="author">

        <button type="submit">Post</button>
      </form>
    </div>

    <div>
      <%= if @posts do  %>
        <ul>
          <%= for post <- @posts do %>
            <li>
              <%= post.body %>
              <strong>by <%= post.author %></strong>
            </li>
          <% end %>
        </ul>
      <% end %>
    </div>
  </body>
</html>
